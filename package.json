{
  "name": "vscode-nostr-toolbox",
  "displayName": "vscode-nostr-toolbox",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nostr-toolbox",
          "title": "Nostr Toolbox",
          "icon": "media/dep.svg"
        }
      ]
    },
    "views": {
      "nostr-toolbox": [
        {
          "id": "nostr-toolbox-generate-keypair",
          "name": "Generate Keypair"
        }
      ]
    },
    "commands": [
      {
        "command": "nostr-toolbox.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "pnpm run compile-web",
    "vscode:prepublish": "pnpm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/mocha": "^10.0.6",
    "@types/assert": "^1.5.10",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "mocha": "^10.4.0",
    "typescript": "^5.3.3",
    "@vscode/test-web": "^0.0.53",
    "ts-loader": "^9.5.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "@types/webpack-env": "^1.18.4",
    "assert": "^2.1.0",
    "process": "^0.11.10"
  },
  "packageManager": "pnpm@8.15.5+sha256.4b4efa12490e5055d59b9b9fc9438b7d581a6b7af3b5675eb5c5f447cee1a589"
}
